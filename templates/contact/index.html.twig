{% extends 'base.html.twig' %}
{% block title %}
   Contacts
{% endblock %}

{% block body %}
<h2>Bienvenue dans le Systeme de SmS Marketing #List_Contact</h2>
<div class="container" id="container">

	<div class="form-container menu-in-container">
		<form action="#">
		   <p>Menu :</p>
		   <ul>
		    <li><a href="{{ path('sms') }}">SMS Sender</a></li>
		    <li class="active"><a href="{{ path('contact') }}">List Contact</a></li>
		    <li><a href="{{ path('newcontact') }}">Add Contact</a></li>
		    <li><a>Add List Contact</a></li>
		    <li><a>Account</a></li>
		    <li><a>Programme Sms</a></li>
		    <li><a>Reglages</a></li>
		    <li><a href="{{ path('home') }}">Log Out</a></li>
		   </ul>
		</form>
	</div>
	<div class="optionMenu-container">
		<div class="overlayOptionMenu" >
			<div class="overlay-panel overlay-right" >
				<h1>Liste de Vos contacts</h1>
				<table style="width:100%">
                  <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Phone</th>
                    <th>Option</th>
                  </tr>
                  {% for contact in contacts %}
                  <tr>
                    <td>{{contact.prenom}}</td>
                     <td>{{contact.nom}}</td>
                     <td>{{contact.phonenumber}}</td>
                     <td>
                      <button>Delete</button>
                     </td>
                  </tr>
                  {% endfor %}
                </table>
                <br>
				<button class="ghost"><a href="{{ path('newcontact') }}"">Ajouter</a></button>
			</div>
		</div>
	</div>
</div>
{% endblock %}

