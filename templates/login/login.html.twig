{% extends 'base.html.twig' %}
{% block title %}
   Login
{% endblock %}

{% block body %}
<h2>Bienvenue dans le Systeme de SmS Marketing </h2>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="#">
			<h1>Creer un compte</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>Ou utiliser vos comptes ?</span>
			<input type="text" placeholder="Name" />
			<input type="email" placeholder="Email" />
			<input type="password" placeholder="Password" />
			<button>Créer</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="{{ path('sms') }}">
			<h1>Se connecter</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>utiliser vos comptes ?</span>
			<input type="email" placeholder="Email" />
			<input type="password" placeholder="Password" />
			<a href="#">Mot de passe oublié ?</a>
			<button>Connect</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Deja inscris ?</h1>
				<p>Si vous avez deja un compte, Merci de vous connecter</p>
				<button class="ghost" id="signIn">Connect</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Man</h1>
				<p>Pour faire partie de la communauté, incris-toi ici!</p>
				<button class="ghost" id="signUp">Creer</button>
			</div>
		</div>
	</div>
</div>
{% endblock %}

